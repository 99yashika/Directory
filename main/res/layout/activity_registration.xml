<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:orientation="vertical"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:background="@drawable/myregisbg">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="240dp"
            android:layout_height="139dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"

            android:padding="16dp"
            android:src="@drawable/myprof" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:paddingBottom="18dp"
            android:textSize="40dp"
            android:textAlignment="center"/>
        <EditText
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/fn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textSize="20dp"/>
        <EditText
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textSize="20dp"/>

        <EditText
            android:drawableLeft="@drawable/ic_perm_contact_calendar_black_24dp"
            android:id="@+id/bd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birth Date"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textSize="20dp"/>

        <EditText
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:id="@+id/brc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Branch"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textSize="20dp"/>

        <EditText
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:id="@+id/mn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:inputType="phone"
            android:textSize="20dp"/>
        <TextView
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:id="@+id/gen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:paddingBottom="10dp"
            android:paddingTop="18dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Male"
                android:checked="true"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Female"

                android:textSize="20dp"/>

            </RadioGroup>
        </LinearLayout>

        <EditText
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:id="@+id/addrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:paddingBottom="10dp"
            android:paddingTop="18dp"
            android:textSize="20dp"/>

        <EditText
            android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:paddingBottom="10dp"
            android:paddingTop="18dp"
            android:textSize="20dp"/>

        <EditText
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:id="@+id/pinc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PINCODE"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:inputType="number"
            android:textSize="20dp"/>

        <EditText
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:inputType="textEmailAddress"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/password"
            android:drawableLeft="@drawable/ic_lock_grey_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:inputType="textPassword"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/regis"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_regis"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="30dp"
            android:text="Register"
            android:onClick="performdataregister"
            android:textSize="20dp" />







    </LinearLayout>





</ScrollView>

</LinearLayout>